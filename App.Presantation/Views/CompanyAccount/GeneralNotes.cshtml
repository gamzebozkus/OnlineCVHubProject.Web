@model VM_Request_CompanyRegister
@{
    ViewData["Title"] = "GeneralNotes";
    Layout = "~/Views/Shared/_CompanyLayout.cshtml";
}


         <style>
    .modal {
    display: none; /* Hidden by default */
    position: fixed; /* Stay in place */
    z-index: 1; /* Sit on top */
    padding-top: 100px; /* Location of the box */
    left: 0;
    top: 0;
    width: 100%; /* Full width */
    height: 100%; /* Full height */
    overflow: auto; /* Enable scroll if needed */
    background-color: rgb(0,0,0); /* Fallback color */
    background-color: rgba(0,0,0,0.4); /* Black w/ opacity */
    }

    .modal-content {
    background-color: #fefefe;
    margin: auto;
    padding: 20px;
    border: 1px solid #888;
    width: 80%;
    }
    </style>
            
                        <div class="row">
                            <div class="col-md-12">
                                <!-- DATA TABLE -->
                                <h3 class="title-5 m-b-35">data table</h3>
                   
                            
                                <div class="table-responsive table-responsive-data2">
                                    <table class="table table-data2">
                                        <thead>
                                            <tr>
                                               
                                                <th>İsim-Soyisim</th>
                                                <th>Email</th>
                                                <th>unvan</th>
                                                <th>Not</th>
                        <th>Cv'yi Görüntüle</th>
                        <th>Görüşme Durumu</th>
                                             
                                            </tr>
                                        </thead>
                <tbody>
                    @foreach (var cv in Model.CompanySavedCVs)
                    {
                        <tr class="tr-shadow">
                            <td>@cv.CvName</td>
                            <td><span class="block-email">@cv.CvMail</span></td>
                            <td>@cv.CvTitle</td>
                            <td class="desc">@cv.Notes</td>
                            <td><a href="@Url.Action("CvDetails", "CompanyAccount", new { cvId = cv.CvId})">Cv'yi Görüntüle</a></td>
                            <td>@(cv.Status.HasValue && cv.Status.Value ? "Olumlu Görüşme" : "Olumsuz Görüşme")</td>
                            <!-- Düğmeler ve diğer içerikler -->
                        </tr>
                    }
                </tbody>
                                    </table>
                                </div>
                                <!-- END DATA TABLE -->
                            </div>
                        </div>

